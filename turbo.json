{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "with": ["dev", "db:dev"],
      "persistent": true,
      "cache": false
    },
    "db:dev": {
      "persistent": true,
      "cache": false,
      "interactive": true
    },
    "db:push": {
      "cache": false
    }
  }
}
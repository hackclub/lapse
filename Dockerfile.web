# syntax=docker/dockerfile:1.7-labs
############################  deps  ############################
FROM --platform=$TARGETPLATFORM oven/bun:1-alpine AS deps
WORKDIR /app

COPY common ./common/
COPY web/prisma ./web/prisma
COPY web/bun.lock web/package.json ./web/

COPY package.json ./

# Cache bun's global store to avoid network on rebuilds
# Install from workspace root to resolve workspace dependencies
RUN --mount=type=cache,id=bun-cache,target=/root/.cache/bun \
    --mount=type=cache,id=prisma-cache,target=/root/.cache/prisma \
    bun install --frozen-lockfile

###########################  builder  ##########################
FROM deps AS builder
WORKDIR /app

# Copy the rest of the web source AFTER deps layer -> keeps cache hot
COPY web ./web/

# Build common package first
RUN --mount=type=cache,id=bun-cache,target=/root/.cache/bun \
    cd common && bun run build

# Display Sentry environment variables for debugging
RUN echo "SENTRY_ORG: $SENTRY_ORG"
RUN echo "SENTRY_PROJECT: $SENTRY_PROJECT"

# Prisma engines download are also cached
RUN --mount=type=cache,id=prisma-cache,target=/root/.cache/prisma \
    --mount=type=cache,id=bun-cache,target=/root/.cache/bun \
    cd web && NODE_ENV=production bun run build

RUN apk update && apk add bash 

######################  prod-deps (runtime)  ####################
# Install ONLY the packages required at runtime, plus Prisma for migrations
FROM deps AS prod-deps
WORKDIR /app

RUN --mount=type=cache,id=bun-cache,target=/root/.cache/bun \
    bun install --production --frozen-lockfile

# Add just the Prisma CLI for migrations (it's in devDependencies but needed at runtime)
RUN --mount=type=cache,id=bun-cache,target=/root/.cache/bun \
    cd web && bun add prisma@^6.16.2 --exact

############################  runner  ###########################
FROM --platform=$TARGETPLATFORM oven/bun:1-alpine AS runner
WORKDIR /app

# Install curl for Coolify
RUN apk add --no-cache curl

# Non-root user (using Alpine syntax)
RUN addgroup -S nextjs && adduser -S nextjs -G nextjs

# Copy runtime files with proper ownership
COPY --from=prod-deps --chown=nextjs:nextjs /app/web/node_modules ./node_modules
COPY --from=builder --chown=nextjs:nextjs /app/web/public ./public
COPY --from=builder --chown=nextjs:nextjs /app/web/prisma ./prisma
COPY --from=builder --chown=nextjs:nextjs /app/web/.next/standalone ./
COPY --from=builder --chown=nextjs:nextjs /app/web/.next/static ./.next/static

# Switch to non-root user
USER nextjs

# Environment variables
ENV NODE_ENV=production
ENV PORT=3000
ENV NEXT_TELEMETRY_DISABLED=1
ENV PRISMA_HIDE_UPDATE_MESSAGE=1

EXPOSE 3000

# Run db push to create schema, then start NextJS (standalone ships server.js)
CMD ["sh","-c","bun run db:push && HOSTNAME=0.0.0.0 bun run server.js"]